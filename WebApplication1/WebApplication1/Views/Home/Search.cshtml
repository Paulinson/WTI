@model IEnumerable<WebApplication1.Models.Ksiazki>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (@Html.BeginForm())
    {
        <p>
            Wyszukaj: @Html.TextBox("k") <br />
            <input type="submit" value="Wyszukaj"
        </p>
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Biblioteka.nazwa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isbn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Biblioteka.nazwa)
        </td>
        <td>
            @Html.ActionLink("Wyświetl", "getEgzemplarz","Borrow", new { id=item.id_ksiazka}) |
            @Html.ActionLink("Details", "Details", new { id=item.id_ksiazka }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_ksiazka })
        </td>
    </tr>
}

</table>
